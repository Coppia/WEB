#wrapper {
  width: 100%;
  background-color: #EAEAEA;
}

#page-wrapper {
  padding: 0 15px;
  min-height: 568px;
  background-color: white;
}

@media(min-width:768px) {
  #page-wrapper {
      position: inherit;
      margin: 0 0 0 150px;
      padding: 0;
      border-left: 1px solid #fff;
  }
}

.navbar-default {
  background-color: #EAEAEA;
}

// --Sidebar

.sidebar {
  .sidebar-nav.navbar-collapse {
      padding-left: 0;
      padding-right: 0;
      text-align: center;
  }
}

@mixin btn-theme($color) {
  background-color: $color;
  border-color: $color;
  &:hover {
    background-color: $color !important;
    border-color: $color !important;
  }
  &:active {
    background-color: $color !important;
    border-color:$color !important;
  }
  &:focus {
    background-color: $color !important;
    border-color:$color !important;
    outline: inherit;
  }
}

.sidebar a {
  @include btn-theme(#EAEAEA);
}

.sidebar .btn-default {
  @include btn-theme(#EAEAEA);
}

.sidebar .sidebar-search {
  padding: 15px;
}

